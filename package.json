{
  "name": "todo-app-cicd",
  "version": "1.0.0",
  "description": "Simple Todo App for CI/CD Practice",
  "main": "src/app.js",
  "scripts": {
    "test": "jest",
    "test:ci": "jest --ci --reporters=default --reporters=jest-junit",
    "serve": "http-server src -p 8080",
    "lint": "eslint src/*.js"
  },
  "keywords": [
    "todo",
    "ci/cd",
    "practice"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.0.0",
    "http-server": "^14.0.0",
    "jest": "^27.5.1",
    "jest-junit": "^16.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ]
  },
  "jest-junit": {
    "outputDirectory": "test-results/jest",
    "outputName": "results.xml"
  }
}